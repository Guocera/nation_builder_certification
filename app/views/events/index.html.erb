<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>NationBuilder Certification</title>
</head>
<body>
  <%= render "/nav" %>

  <p id="notice"><%= notice %></p>

  <div class="container">
    <div class="row">    
      <div class="col-md-12">
        <h1>Listing Events</h1>
        <div class="table-responsive">                
          <table id="mytable" class="table table-bordred table-striped table-hover">
            <thead>
              <th>Event Name</th>
              <th>Edit</th>
            </thead>

            <tbody>
              <% @events.each_with_index do |event, i| %>
                <tr>
                  <td><%= event['name'] %></td>
                  <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target=<%= "#edit-#{i}" %> ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                </tr>    
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to 'New Event', new_event_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  
</body>
</html>

