<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>

        <td><%= link_to "#{person['first_name']} #{person['last_name']}", person_path(person["email"]) %></td>
        <td><%= link_to 'Edit', edit_person_path(person["email"]) %></td>
        <td><%= link_to 'Destroy', person_path(person["email"]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path %>
